{
	"name": "nivrita",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:migrate:local": "wrangler d1 migrations apply nivrita-todo-db --local",
		"db:migrate:remote": "wrangler d1 migrations apply nivrita-todo-db --remote"
	},
	"dependencies": {
		"@cloudflare/workers-types": "^4.20250604.0",
		"@opennextjs/cloudflare": "^1.1.0",
		"better-sqlite3": "^11.10.0",
		"drizzle-orm": "^0.44.1",
		"drizzle-zod": "^0.8.2",
		"next": "15.3.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"zod": "^3.25.50"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"drizzle-kit": "^0.31.1",
		"eslint": "^9",
		"eslint-config-next": "15.3.3",
		"tailwindcss": "^4",
		"wrangler": "^4.19.1"
	}
}